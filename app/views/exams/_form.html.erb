<div class="white">
<%= form_for exam do |f| %>
	<div class="row">
		<div class="form-group col">
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>
		<div class="form-group col">
			<%= f.label :subject %>
			<%= f.text_field :subject, class: 'form-control' %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col">
			<%= f.label :start_date %>  <small>*The Exam will not be visible to students before this</small>
			<%= f.date_field :start_date, class: 'form-control' %>
		</div>
		<div class="form-group col">
			<%= f.label :duration %><small>  *In Minutes</small>
			<%= f.text_field :duration, class: "form-control" %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col">
			<%= f.label :course %>
			<%= f.select :course, AVAILABLE_COURSES, {}, class: 'form-control' %>
		</div>
		<div class="form-group col">
			<%= f.label :semester %>
			<%= f.text_field :semester, class: "form-control" %>
		</div>
	</div>
	<h3>Questions</h3>
	<%= f.fields_for :questions do |ff| %>
		<%= render 'question_fields', f: ff %>
	<% end %>
	<div class="form-group">
		<%= link_to_add_association "Add Question", f, :questions, { class: 'link-primary add-question-button'} %>
	</div>
	<div class="form-group">
		<%= f.submit "Save", class: 'btn btn-primary' %>
	</div>
<% end %>
</div>